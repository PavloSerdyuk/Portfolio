@model WebApplication_ASP_2.Models.Project
@{
    ViewData["Title"] = "ProjectEdit";
}

<h2>ProjectEdit</h2>

<h4>Project</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ProjectEdit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id" />
            <div class="form-group">
                <label asp-for="name" class="control-label"></label>
                <input asp-for="name" class="form-control" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="description" class="control-label"></label>
                <input asp-for="description" class="form-control" />
                <span asp-validation-for="description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="repository" class="control-label"></label>
                <input asp-for="repository" class="form-control" />
                <span asp-validation-for="repository" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="price" class="control-label"></label>
                <input asp-for="price" class="form-control" />
                <span asp-validation-for="price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="user_id" class="control-label"></label>
                <input asp-for="user_id" class="form-control" />
                <span asp-validation-for="user_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="visibility_id" class="control-label">Visibility</label>
                </br>
                @Html.DropDownList("visibilityTypes",
                        new SelectList((System.Collections.IEnumerable)ViewData["visibilityTypes"], "Value", "Text"))
                <input asp-for="visibility_id" class="form-control" readonly />
                <span asp-validation-for="visibility_id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="ProjectsTable">Back to List</a>
</div>
<script>

    var selectVisibility = document.getElementById("visibilityTypes");
    var inputVisibility = document.getElementById("visibility_id");

    selectVisibility.selectedIndex = inputVisibility.value

    selectVisibility.onchange = function () {
        inputVisibility.value = selectVisibility.selectedIndex;
    };

</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
