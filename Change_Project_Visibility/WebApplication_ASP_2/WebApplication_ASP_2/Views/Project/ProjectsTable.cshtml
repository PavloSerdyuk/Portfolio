@model IEnumerable<WebApplication_ASP_2.Models.Project>

@{
    ViewData["Title"] = "ProjectsTable";
}

<h2>Projects list</h2>

<p>
    <a asp-action="ProjectCreate" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.price)
            </th>
            <th>
                visibility
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.visibility_id)
            </td>
            <td>
                @Html.ActionLink("Edit", "ProjectEdit", new { id=item.id }) |
                @Html.ActionLink("Details", "ProjectDetails", new { id=item.id }) |
                @Html.ActionLink("Delete", "ProjectDelete", new { id=item.id })
            </td>
        </tr>
}
    </tbody>
</table>
